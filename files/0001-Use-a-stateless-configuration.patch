From e8e4840693cad51483fa75f3a4ebf5b593ee1d16 Mon Sep 17 00:00:00 2001
From: Pierre-Yves <pyu@riseup.net>
Date: Thu, 4 Jan 2018 14:39:12 +0100
Subject: [PATCH] Use a stateless configuration

Signed-off-by: Pierre-Yves <pyu@riseup.net>
---
 src/Makefile.am | 2 +-
 src/rcfile.c    | 6 +++++-
 2 files changed, 6 insertions(+), 2 deletions(-)

diff --git a/src/Makefile.am b/src/Makefile.am
index 625434c..6d0ae38 100644
--- a/src/Makefile.am
+++ b/src/Makefile.am
@@ -1,5 +1,5 @@
 AM_CPPFLAGS = -DLOCALEDIR=\"$(localedir)\" -DSYSCONFDIR=\"$(sysconfdir)\" \
-	-I$(top_builddir)/lib -I$(top_srcdir)/lib
+	-DDATADIR=\"$(datadir)\" -I$(top_builddir)/lib -I$(top_srcdir)/lib
 
 CLEANFILES = revision.h
 
diff --git a/src/rcfile.c b/src/rcfile.c
index eec6544..cd2464a 100644
--- a/src/rcfile.c
+++ b/src/rcfile.c
@@ -1232,7 +1232,11 @@ void do_rcfiles(void)
 {
 	const char *xdgconfdir;
 
-	nanorc = mallocstrcpy(nanorc, SYSCONFDIR "/nanorc");
+	if (access(SYSCONFDIR "/nanorc", F_OK) == 0) {
+		nanorc = mallocstrcpy(nanorc, SYSCONFDIR "/nanorc");
+	} else {
+		nanorc = mallocstrcpy(nanorc, DATADIR "/defaults/nano/nanorc");
+	}
 
 	/* Process the system-wide nanorc. */
 	parse_one_nanorc();
